<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.github.hcsp.mybatis.OrderDao">
    <select id="getInnerJoinOrders" resultMap="Order">
        select o.id, o.user_id, o.goods_id, u.name as user_name, g.name as goods_name,
        o.goods_num * o.goods_price as total_price
        from `order` o
        inner join `user` u on o.user_id = u.id
        inner join `goods` g on o.goods_id = g.id
        where u.name is not null and g.name is not null
    </select>
    <resultMap id="Order" type="Order">
        <result property="id" column="id"/>
        <result property="totalPrice" column="total_price"/>
        <association property="user" javaType="User">
            <id property="id" column="user_id"/>
            <result property="name" column="user_name"/>
        </association>
        <association property="goods" javaType="Goods">
            <id property="id" column="goods_id"/>
            <result property="name" column="goods_name"/>
        </association>
    </resultMap>
</mapper>