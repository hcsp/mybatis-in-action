<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.hcsp.mybatis.UserMapper">
    <select id="queryUsers" resultType="User">
        select * from USER
        <where>
            <if test="username != null">
                name = #{username}
            </if>
        </where>
        limit #{limit} offset #{offset};
    </select>
    <select id="queryUsersCount" parameterType="string" resultType="double">
        select count(*) from USER
        <where>
            <if test="username != null">
                name = #{username}
            </if>
        </where>
    </select>
    <select id="batchInsertUsers" parameterType="list">
        insert into USER (name, tel, address)
        values
        <foreach item="user" index="index" collection="list"
                 separator=",">
            (#{user.name}, #{user.tel}, #{user.address})
        </foreach>
    </select>
    <update id="updateUser" parameterType="User">
        update USER
        <set>
            <if test="name != null">NAME=#{name},</if>
            <if test="tel != null">TEL=#{tel},</if>
            <if test="address != null">ADDRESS=#{address},</if>
        </set>
        where id=#{id}
    </update>
    <delete id="deleteUser" parameterType="int">
        delete from USER where ID = #{id};
    </delete>
    <select id="queryUser" parameterType="int" resultType="User">
        select * from USER where ID=#{id}
    </select>
</mapper>