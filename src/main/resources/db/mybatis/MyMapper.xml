<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="UserDao.Mapper">
    <select id="getUserByPage" resultType="User" parameterType="map">
        select id, name, tel, address from user
        <if test="username != null">
            where name = #{username}
        </if>
        limit #{offset}, #{limit}
    </select>
    <select id="getTotalUserNum" resultType="int" parameterType="String">
        select count(*) from USER
        <if test="username != null">
            where name = #{username}
        </if>
    </select>
    <select id="batchInsertUsers" parameterType="map">
        insert into user(name, tel, address)
        values
        <foreach item="user" collection="users" separator=",">
            (#{user.name}, #{user.tel}, #{user.address})
        </foreach>
    </select>
    <update id="updateUser" parameterType="User">
        update user
        <set>
            <if test="name != null"> name = #{name},</if>
            <if test="tel != null"> tel = #{tel},</if>
            <if test="address != null"> address = #{address}</if>
        </set>
        where id = #{id}
    </update>
    <delete id="deleteUserById" parameterType="int">
        delete from user where id = #{id}
    </delete>
    <select id="selectUserById" resultType="User" parameterType="int">
        select * from user where id = #{id}
    </select>
    <select id="getInnerJoinOrders" resultMap="orderResultMap">
        select o.id  order_id,
        u.id  user_id,
        u.NAME  user_name,
        u.tel  user_tel,
        u.ADDRESS  user_address,
        g.id  goods_id,
        g.name  goods_name,
        g.PRICE  goods_price,
        (o.goods_num * o.goods_price)  total_price
        from "ORDER"  o
        inner join goods g on o.goods_id = g.id
        inner join user u on o.user_id = u.id
        where u.name is not null and g.name is not null
    </select>
    <resultMap id="orderResultMap" type="Order">
        <id property="id" column="order_id" />
        <result property="totalPrice" column="total_price"/>
        <association property="user" javaType="User">
            <result property="id" column="user_id"/>
            <result property="name" column="user_name"/>
            <result property="tel" column="user_tel"/>
            <result property="address" column="user_address"/>
        </association>
        <association property="goods" javaType="Goods">
            <id property="id" column="goods_id"/>
            <result property="id" column="goods_id"/>
            <result property="name" column="goods_name"/>
            <result property="price" column="goods_price"/>
        </association>
    </resultMap>

</mapper>