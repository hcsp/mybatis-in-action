<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="UserMapper">
    <select id="getUserByUserName" parameterType="map" resultType="com.github.hcsp.mybatis.entity.User">
        select id, name, tel, address
        from user
        <if test="username != null">
            where name = #{username}
        </if>
        limit #{offset} ,#{limit}
    </select>

    <select id="getPageCount" parameterType="string" resultType="int">
        select count(*)
        from user
        <if test="username != null">
            where name = #{username}
        </if>
    </select>

    <insert id="batchInsertUsers" parameterType="map">
        insert into user (id,name,tel,address)
        values
        <foreach item="user" collection="users" separator=",">
            (#{user.id} , #{user.name} , #{user.tel} , #{user.address})
        </foreach>
    </insert>

    <update id="updateUser" parameterType="com.github.hcsp.mybatis.entity.User">
        update user
        <set>
            <if test="name != null">name=#{name},</if>
            <if test="tel != null">tel=#{tel},</if>
            <if test="address != null">address=#{address},</if>
        </set>
        where id=#{id}
    </update>

    <delete id="deleteUser">
        delete from user where id = #{id}
    </delete>

    <select id="selectUserById" resultType="com.github.hcsp.mybatis.entity.User">
        select * from user where id = #{id}
    </select>

</mapper>